<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_motion_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/splash"
    app:showPaths="false"
    tools:context="com.dpashko.fastrent.presentation.feature.splash.SplashFragment">

  <ImageView
      android:id="@+id/splash_icon"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:src="@drawable/splash_icon"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.3" />

  <TextView
      android:id="@+id/splash_app_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/rowdies_regular"
      android:text="@string/app_name"
      android:textColor="#0BCC95"
      android:textSize="50dp" />

</androidx.constraintlayout.motion.widget.MotionLayout>